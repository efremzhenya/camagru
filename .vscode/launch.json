	"version": "0.2.0",
	"configurations": [
		{
			"name": "Listen for XDebug",
			"type": "php",
			"request": "launch",
			"port": 9000,
			"pathMappings": {
				"/var/www/html": "${workspaceRoot}/www",
				"/var/www/html/app": "${workspaceRoot}/www/app",
				"/var/www/html/app/core": "${workspaceRoot}/www/app/core",
				"/var/www/html/app/core/route.php": "${workspaceRoot}/www/app/core/route.php"
			  }
		},
		{
			"name": "Launch currently open script",
			"type": "php",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"port": 9000
		}
	]
}
